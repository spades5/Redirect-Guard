{
  "manifest_version": 3,
  "name": "戒色小幫手",
  "version": "1.0",
  "description": "我們都很擔心你，別再尻了!",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "48": "icon48.png"
  }
}
